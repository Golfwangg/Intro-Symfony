{% extends 'base.html.twig' %}

{% block title %}Tag{% endblock %}

{% block body %}
    <h1>Tag</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tag.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tag.name }}</td>
            </tr>
        </tbody>
    </table>

    <h1>Articles</h1>

    {% for article in tag.articles %}
        <li>{{ article.title }} </li>
    {% else %}
        <li>No articles for this tag</li>
    {% endfor %}
{% endblock %}
