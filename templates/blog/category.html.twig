{% extends 'base.html.twig' %}

{% block stylesheets %}{% endblock %}

{% block body %}
    <h1>Articles from {{ category.name }}</h1>
    {% for article in articles %}
        <div>
            <h1>{{ article.id }} / {{ article.title }}</h1>
            <h2>Category : {{ article.category.name }}</h2>
            <p>{{ article.content }}</p>
        </div>
    {% endfor %}
    <a href="{{ path('app_index') }}">
        Back to homepage.
    </a>
{% endblock %}
